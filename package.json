{
  "private": true,
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "lint": "xo",
    "wiredep": "wiredep --exclude /robot-api/ --src app/index.html",
    "prebuild": "npm run lint",
    "build": "npm run build_browser",
    "build_browser": "browserify src/index.js -d | exorcist app/bundle.js.map > app/bundle.js",
    "postbuild": "sh -c 'test -s app/bundle.js'",
    "watch": "watchify src/index.js -o app/bundle.js -dv",
    "serve": "browser-sync start --files app/*.js app/styles/*.css --server app",
    "dev": "concurrent \"npm run serve\" \"npm run watch\""
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "esnext": true,
    "space": true,
    "envs": [
      "browser"
    ],
    "ignores": [
      "app/**"
    ],
    "rules": {
      "react/jsx-indent-props": [
        2,
        "space"
      ]
    }
  },
  "dependencies": {
    "material-ui": "^0.14.1",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-tap-event-plugin": "^0.2.1",
    "robot-api": "^0.5.1"
  },
  "devDependencies": {
    "babel-cli": "^6.3.13",
    "babel-plugin-syntax-object-rest-spread": "^6.3.13",
    "babel-plugin-transform-class-properties": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browser-sync": "^2.10.1",
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.11",
    "concurrently": "^1.0.0",
    "eslint-config-xo-react": "^0.3.0",
    "eslint-plugin-react": "^3.14.0",
    "exorcist": "^0.4.0",
    "watchify": "^3.6.1",
    "wiredep": "^3.0.0",
    "xo": "^0.12.1"
  }
}
